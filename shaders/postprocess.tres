[gd_resource type="ShaderMaterial" load_steps=2 format=2]

[sub_resource type="Shader" id=1]
code = "shader_type canvas_item;

uniform float bright = 1.0;
uniform float dark   = 0.7;
uniform float width  = 10.0;
uniform float vignette = 0.6;

vec3 crt_effect(in vec3 color, in float pixel_y) {
	vec3 result;
	
	float a = mod(pixel_y, width);
	float b = width * .5;
	float mul = smoothstep(0.5, a, b);
	
	result = clamp(mul, dark, bright) * color;
	
	return result;
}

vec3 vignette_effect(in vec3 color, in vec2 uv) {	
	uv *= 2.0;
	uv -= 1.0;
	uv *= 0.28;
	float l = length(uv);
	
	return color * clamp(1.0 - pow(l, 2), vignette, 1.0);
}

void fragment() {
	vec3 c = textureLod(SCREEN_TEXTURE, SCREEN_UV, 0.0).rgb;
	c = crt_effect(c, (SCREEN_UV / SCREEN_PIXEL_SIZE).y);
	c = vignette_effect(c, SCREEN_UV);
	COLOR.rgb = c;
}
"

